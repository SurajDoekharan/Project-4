<Window x:Class="Going101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Going101"
        mc:Ignorable="d"
        Title="Going101" Height="450" Width="725" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI Semilight">
    <Grid>
        <Image x:Name="Image" HorizontalAlignment="Left" Height="166" Margin="5,10,0,0" VerticalAlignment="Top" Width="425" OpacityMask="Black" Source="Erasmusbrug_seen_from_Euromast.jpg" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label x:Name="Title" Content="Going101" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Height="40" Width="94" FontSize="22" Foreground="White" Grid.Column="1"/>
        <ListBox x:Name="Categories" HorizontalAlignment="Left" Height="331" Margin="440,10,0,0" VerticalAlignment="Top" Width="267" Initialized="Categories_Initialized"/>
        <Button x:Name="Startbutton" Content="Kies Categorie" HorizontalAlignment="Left" Margin="440,346,0,0" VerticalAlignment="Top" Width="267" Height="56" IsEnabled="False"/>
        <TextBlock x:Name="information" HorizontalAlignment="Left" Margin="5,181,0,0" TextWrapping="Wrap" Text="Information" VerticalAlignment="Top" Height="228" Width="410" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="Testpage" Content="Testpage" HorizontalAlignment="Left" Margin="237,364,0,0" VerticalAlignment="Top" Width="75" Click="Testpage_Click"/>
        <Button x:Name="Testpage2" Content="Testpage 2" HorizontalAlignment="Left" Margin="336,364,0,0" VerticalAlignment="Top" Width="75" Click="Testpage2_Click"/>
    </Grid>

</Window>
